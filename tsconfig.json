{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "baseUrl": "./",
    "types": ["webpack-env", "jest"],
    "paths": {
      "*": ["types/*"],
      "@/*": ["src/*"],
      "twemoji": ["src/types/twemoji.d.ts"],
      "vue-analytics": ["src/types/vue-analytics.d.ts"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx", "src/main.js"],
  "exclude": ["node_modules"]
}
